@{
  Layout = "_Layout";
}

<div class="container">

<h1>List of all cities that have flights today</h1>

@if (@Model.Count == 0)
{
  <h3>No cities have been added yet!</h3>
}

@foreach (var city in Model)
{
  <h3><a href='/cities/@city.GetId()'>@city.GetCityName()</a></h3>
}
<br>
<h3><a href='/cities/new'>Add a new city</a></h3>
<h3><a href="/">Back home</a></h3>

</div>
