<h3>Here are all the flights in this city:</h3>

<ol>
@foreach (var flight in @Model["flights"])
{
  <li><a href='/cities/@Model["city"].GetId()/flights/@flight.GetId()'>@flight.GetDescription()</a></li>
}
</ol>

