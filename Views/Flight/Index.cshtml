@{
  Layout = "_Layout";
}

<div class="container">

<h1>List of all flights in this flight</h1>

@if (@Model.Count == 0)
{
  <h3>No flights have been added yet!</h3>
}

@foreach (var flight in Model)
{
  <h3><a href='/flights/@flight.GetId()'>@Flight.GetFlightNumber()</a></h3>
}
<br>
<h3><a href='/flights/new'>Add a new flight</a></h3>
<h3><a href="/">Back home</a></h3>

</div>
